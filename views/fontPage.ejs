<script>
    function getObject(ObjectId){
       const xhhr = new XMLHttpRequest();
       xhhr.onreadystatechange = function(){
        if(this.readyState==4&&this.status==200){
            console.log('The request is successfully sent by you bro')
            const data = JSON.parse(this.responseText);
            console.log('The details of the product is ',data);
        }
       }
       xhhr.open('get', `/get-the-object/${ObjectId}`);
       xhhr.send(null)
    }

    const button  = document.getElementById('stripeButton');
    button.onclick = function(){
        console.log('The stripe button is clicked')
    }

   function enroll(objectId){
       var data = null;
       const xhht = new XMLHttpRequest();
       xhht.onreadystatechange = function(){
         try{
            if(this.readyState ==4&&this.status==200){
             data = JSON.parse(this.responseText);
             console.log('The data we get from this request is ',data);
             window.location.href = '/enroll-for-the-course'
           }
         }catch(error){
            console.log(error)
         }
       }
       xhht.open('get',`/get-enrollment/${objectId}`);
       xhht.send(null);
   }
