<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Video Lectures</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    body {
      padding-top: 60px;
      background-color: #f8f9fa;
    }

    .navbar {
      background-color: #343a40;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand {
      color: #fff;
      font-weight: bold;
    }

    .navbar-toggler-icon {
      background-color: #fff;
    }

    .video-list {
      list-style: none;
      padding: 0;
    }

    .card {
      margin-bottom: 20px;
      border: none;
      border-radius: 15px;
      overflow: hidden;
      transition: transform 0.3s;
    }

    .card:hover {
      transform: scale(1.02);
    }

    .card-body {
      padding: 20px;
    }

    .card-title {
      color: #007BFF;
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .card-text {
      color: #555;
      margin-bottom: 20px;
    }

    .embed-responsive {
      border-radius: 15px;
      overflow: hidden;
    }

    .btn-primary {
      background-color: #007BFF;
      border: none;
      transition: background-color 0.3s;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="#">
      Welcome to Video Section
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
      aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav ml-auto">
        <!-- Add any additional navigation items if needed -->
      </ul>
    </div>
  </nav>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Video 1 Title</h5>
            <p class="card-text">Description or additional information about Video 1.</p>
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/GkKQhHT6-2Y"
                allowfullscreen></iframe>
            </div>
            <button class="btn btn-primary btn-block" onclick="markAsWatched('<%= course._id  %>')">Mark as Watched</button>
          </div>
        </div>
      </div>
  
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Video 2 Title</h5>
            <p class="card-text">Description or additional information about Video 2.</p>
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/ANOTHER_VIDEO_ID"
                allowfullscreen></iframe>
            </div>
            <button class="btn btn-primary btn-block" onclick="markAsWatched('<%= course._id  %>')">Mark as Watched</button>
          </div>
        </div>
      </div>
  
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Video 3 Title</h5>
            <p class="card-text">Description or additional information about Video 3.</p>
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/YET_ANOTHER_VIDEO_ID"
                allowfullscreen></iframe>
            </div>
            <button class="btn btn-primary btn-block" onclick="markAsWatched('<%= course._id  %>')">Mark as Watched</button>
          </div>
        </div>
      </div>
  
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Video 4 Title</h5>
            <p class="card-text">Description or additional information about Video 4.</p>
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/ANOTHER_VIDEO_ID"
                allowfullscreen></iframe>
            </div>
            <button class="btn btn-primary btn-block" onclick="markAsWatched('<%= course._id  %>')">Mark as Watched</button>
          </div>
        </div>
      </div>
  
    </div>
  </div>
  

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

  <script>
    let watchedVideos = [];

    function markAsWatched(videoId) {
      if (!watchedVideos.includes(videoId)) {
        watchedVideos.push(videoId);
        console.log(`Video ${videoId} marked as watched. Watched videos: ${watchedVideos}`);
      } else {
        console.log(`Video ${videoId} is already marked as watched.`);
      }

      const xhr = new XMLHttpRequest();
      xhr.open('POST', `/watched-videos/${videoId}`, true);
      xhr.setRequestHeader('Content-Type', 'application/json');
      xhr.onload = function () {
        if (xhr.status === 200) {
          console.log('The request is successful', xhr.responseText);
        } else {
          console.log('Error', xhr.statusText);
        }
      }

      // Send the count of watched videos instead of the entire array
      const requestBody = JSON.stringify({ watchedVideosCount: watchedVideos.length });
      xhr.send(requestBody);

    }
  </script>
</body>

</html>
